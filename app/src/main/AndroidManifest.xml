<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.InventoryApp">
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:label="InventoryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <!-- Halaman utama aplikasi -->
        <activity android:name="com.example.InventoryApp.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.InventoryApp.activity.AddBarangActivity" />
        <activity android:name="com.example.InventoryApp.activity.BarangActivity" />
        <activity android:name="com.example.InventoryApp.activity.AddKategoriActivity" />
        <activity android:name="com.example.InventoryApp.activity.DetailBarangActivity" />

    </application>

</manifest>
